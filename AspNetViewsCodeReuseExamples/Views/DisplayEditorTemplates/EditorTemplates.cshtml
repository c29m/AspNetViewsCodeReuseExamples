@model AspNetViewsCodeReuseExamples.ViewModels.DisplayEditorTemplatesViewModel

<h1>Editor templates examples</h1>

@using (Html.BeginForm())
{
    <h2>Editor template for Boolean</h2>
    @Html.EditorFor(m => m.AreYouOk)

    <h2>Editor template for User class</h2>
    @Html.EditorFor(m => m.User)
    
    <h2>Local default editor template for Movie class</h2>
    @Html.EditorFor(m => m.Movie)

    
    <h2>Local not default editor template for Movie class</h2>
    @Html.EditorFor(m => m.SpecialMovie, "SpecialMovie")
    
    <div>
        <input type="submit" name="Save" value="Save" />
    </div>
}
